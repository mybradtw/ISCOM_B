<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarFragment"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f7f7f7"
        >
        <TextView
            android:id="@+id/calendar_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1月"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/calendar_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/calendar_month"
            android:src="@drawable/prev_month"
            />
        <ImageView
            android:id="@+id/calendar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/calendar_month"
            android:src="@drawable/next_month"
            />
        <TextView
            android:id="@+id/calendar_inbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收件匣(1)"
            android:textColor="#f00"
            android:textSize="20sp"
            android:layout_marginLeft="12dp"
            />
        <ImageView
            android:id="@+id/calendar_add"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_event"
            android:layout_marginHorizontal="4dp"
            />
        <ImageView
            android:id="@+id/calendar_search_business"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/calendar_add"
            android:src="@drawable/search_business"
            android:layout_marginHorizontal="4dp"
            />
        <ImageView
            android:id="@+id/calendar_search_calendar"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/calendar_search_business"
            android:src="@drawable/search"
            android:layout_marginHorizontal="4dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="vertical"
        >
        <tw.brad.iscom_c.CalendarView
            android:id="@+id/calendar_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ListView
            android:id="@+id/calendar_eventlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_timelist"
            />

    </LinearLayout>
</LinearLayout>