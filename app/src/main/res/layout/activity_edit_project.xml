<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProjectActivity">

    <FrameLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/bg_main_bottom"
        >
        <LinearLayout
            android:id="@+id/edit_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/edit_icon0"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/main_icon0"
                />
            <TextView
                android:id="@+id/edit_title0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="專案資訊"
                android:textSize="12dp"
                android:gravity="center"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_hist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/edit_icon1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/main_icon1"
                />
            <TextView
                android:id="@+id/edit_title1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="歷程紀錄"
                android:textSize="12dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_fee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/edit_icon2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/main_icon2"
                />
            <TextView
                android:id="@+id/edit_title2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="費用管理"
                android:textSize="12dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/edit_icon3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/main_icon3"
                />
            <TextView
                android:id="@+id/edit_title3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="商品清單"
                android:textSize="12dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>