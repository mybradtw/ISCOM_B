<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailScheduleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f7f7f7"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="行程詳細資訊"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/detail_schedule_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=" 1月"
            android:textColor="#f00"
            android:textSize="20sp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/detail_schedule_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="編輯"
            android:textColor="#f00"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            />

    </RelativeLayout>


    <!-- 開始資料內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_height="0dp"
        android:layout_weight="14"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:background="#fff"
            >
            <TextView
                android:id="@+id/detail_schedule_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="標題"
                android:textSize="16dp"
                android:paddingVertical="4dp"
                android:layout_margin="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:background="#fff"
            >
            <TextView
                android:id="@+id/detail_schedule_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地點"
                android:textSize="16dp"
                android:paddingVertical="4dp"
                android:layout_margin="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="開始"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <TextView
                android:id="@+id/detail_schedule_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="結束"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <TextView
                android:id="@+id/detail_schedule_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="專案類型"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <TextView
                android:id="@+id/detail_schedule_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="專案名稱"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <TextView
                android:id="@+id/detail_schedule_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="邀請對象"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提示"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="備註"
                android:textSize="16dp"
                android:layout_margin="4dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>